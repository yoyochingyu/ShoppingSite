<%-include("../partials/header")%>
<div class="container-fluid push">
    <div class="container">
    <h1>
        Products
    </h1>
    <span><a href="/admin/products/new" type="button" style="text-align: right;"><i class="fas fa-plus-circle"></i> Add new product</a></span>
    <div class="row">
        <%products.forEach((product)=>{%>
            <div class="col-lg-4 col-sm-6">
                    <a href = "/admin/products/<%=product.productId%>" class="anchor">
                        <div class="card text-center mt-4" >  
                            <img src="<%=product.img%>" class="card-img-top" alt="讀取失敗QQ">
                            <div class="card-body">
                            <h5 class="card-title"><%=product.productName%></h5>
                            <a href="/admin/products/<%=product.productId%>" class="btn btn-primary mt-2">Detail</a>
                            </div>
                        </div>
                    </a>
            </div>
        <%});%>
    </div>
</div>
</div>

<%-include("../partials/footer")%>