
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id":"localhost:3000/lib/schemas/user",
  "type":"object",
  "additionalProperties": false,
  "required": [ "firstName","lastName","gender","email","password","number","address"],
  "definitions": {
    "address": {
      "type": "object",
      "properties": {
        "streetAddress": { "type": "string" },
        "city":           { "type": "string" },
        "state":          { "type": "string" },
        "zip":{"type":"string","pattern":"^[0-9]{3}$"}
      },
      "required": ["streetAddress", "city", "state","zip"]
    }
  },
  "properties": {
      "firstName":{
        "type":"string"
      },
      "lastName":{
        "type":"string"
      },
      "gender":{
        "type":"string",
        "enum":["female","male","other"]
      },
      "email":{
        "type":"string",
        "format":"email"
      },
      "password":{
        "type":"string"
      },
      "number":{
        "type":"string",
        "pattern":"^[0-9]{10}$"
      },
      "address":{"$ref":"#/definitions/address"},
      "agree":{
        "type":"string"
      },
      "subscribe":{
        "type":"string"
      },
      "cart":{
        "type":"array",
        "default":[],
        "items":{
          "type":"object",
          "required": ["productName","productId","img","price","size","amount"],
          "properties": {
            "productName":{
              "type":"string",
              "minLength":2
            },
            "productId":{
                "type":"string",
                "pattern": "^[A-Z]{3}[0-9]{10}$"
            },
            "img":{
                "type":"string",
                "format":"uri-reference"
            },
            "price":{
                "type":"number"
            },
            "size":{
              "type":"number"
            },
            "amount":{
              "type":"number"
            }
          }
        }
      }
     } 
    }
