{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type":"object",
    "additionalProperties": false,
    "required": ["productId","productName","description","img","price","lastModified"],
    "properties": {
        "productName":{
            "type":"string",
            "minLength":2
        },
        "productId":{
            "type":"string",
            "pattern": "^[A-Z]{3}[0-9]{10}$"
        },
        "description":{
            "type":"string",
            "minLength": 10,
            "maxLength": 800
        },
        "img":{
            "type":"string",
            "format":"uri-reference"
        },
        "price":{
            "type":"number"
        },
        "lastModified":{
            "format": "date-time"
        },
        "amount":{
            "type":"number"
        },
        "size":{
            "type":"object",
            "properties": {
                "S":{
                    "type":"number"
                },
                "M":{
                    "type":"number"
                },
                "L":{
                    "type":"number"
                }
            }
        } 
    }
}
