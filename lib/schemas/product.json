{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id":"localhost:3000/lib/schemas/product",
    "type":"object",
    "additionalProperties": false,
    "required": ["productId","productName","description","img","price","createdBy"],
    "properties": {
        "productName":{
            "type":"string",
            "minLength":2
        },
        "productId":{
            "type":"string",
            "pattern": "^[A-Z]{3}[0-9]{10}$"
        },
        "description":{
            "type":"string",
            "minLength": 10,
            "maxLength": 150
        },
        "img":{
            "type":"string",
            "format":"uri-reference"
        },
        "price":{
            "type":"number"
        },
        "createdBy":{
            "format": "date"
        }
    }
}
